role :ies, %w{www.iespuertodelacruz.es}

#server 'www.iespuertodelacruz.es', user: 'david', roles: %w{ies}

namespace :test do

  desc 'Free Memory'
  task :memory
    on roles(:ies) do
      # execute :touch, release_path.join('tmp/restart.txt')
      data = capture('free')
      put data
    end
  end

	desc 'User space'
  task :user_space do
    on roles(:ies) do
      #   execute :rake, 'cache:clear'
      data = capture(' du -sh /home')
      puts data
    end
  end

end

