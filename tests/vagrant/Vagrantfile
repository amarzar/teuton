# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.define "teuton-opensuse" do |i|
    i.vm.box = "generic/opensuse15"
    i.vm.hostname = "teuton"
    i.vm.network "public_network", bridge: [
      "wlp1s0",
      "enp2s0",
    ]

    i.vm.synced_folder "./", "/vagrant"
    i.vm.provision "shell", inline: <<-SHELL
    wget -qO- https://raw.githubusercontent.com/dvarrui/teuton/master/bin/linux_t-node_install.sh > install.txt
  SHELL
    i.vm.provider "virtualbox" do |v|
      v.name = 'teuton-opensuse'
      v.memory = 2048
    end
  end
end
